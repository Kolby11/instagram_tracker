{
	"name": "Instagram tracker",
	"description": "Instagram tracker extension",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "index.html",
		"default_icon": "instagram_tracker.png"
	},
	"declarative_net_request": {
		"rule_resources": [
			{
				"id": "ruleset_1",
				"enabled": true,
				"path": "rules/instagram_img_rules.json"
			}
		]
	},
	"permissions": ["activeTab", "webRequest", "downloads"],
	"host_permissions": ["*://*.instagram.com/*", "*://*.cdninstagram.com/*"],
	"background": {
		"service_worker": "background.js"
	},
	"web_accessible_resources": [
		{
			"resources": ["*"],
			"matches": ["<all_urls>"]
		},
		{
			"resources": ["/img/*"],
			"matches": ["<all_urls>"],
			"use_dynamic_url": true
		},
		{
			"resources": ["*"],
			"matches": ["*://*.cdninstagram.com/*"]
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; img-src * data: blob:;"
	}
}
