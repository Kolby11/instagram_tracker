{
	"name": "Instagram tracker",
	"description": "Instagram tracker extension",
	"version": "1.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "index.html",
		"default_icon": "instagram_tracker.png"
	},
	"permissions": ["activeTab", "webRequest", "downloads"],
	"host_permissions": ["*://*.fbcdn.net/*", "*://*.instagram.com/*"],
	"web_accessible_resources": [
		{
			"resources": ["*://*.fbcdn.net/*"],
			"matches": ["*://*.instagram.com/*"]
		},
		{
			"resources": ["/img/*"],
			"matches": ["<all_urls>"],
			"use_dynamic_url": true
		}
	],
	"content_security_policy": {
		"extension_pages": "script-src 'self'; img-src * data: blob:;"
	}
}
